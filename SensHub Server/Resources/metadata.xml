<?xml version="1.0" encoding="utf-8" ?>
<metadata defaultLang="en">
  <!-- Configuration description for the server (main class) -->
  <class name="Program">
    <configuration>
      <value name="password" type="StringValue" default="">
        <text lang="en">Set the system password.</text>
      </value>
      <value name="logLevel" type="OptionList" default="Warn">
        <text lang="en">The minimimum logging level. Only messages of this severity or above will be logged.</text>
        <selection name="Error">
          <displayname lang="en">Error</displayname>
          <shortdescription lang="en">Error messages.</shortdescription>
        </selection>
        <selection name="Warn">
          <displayname lang="en">Warn</displayname>
          <shortdescription lang="en">Warning messages.</shortdescription>
        </selection>
        <selection name="Info">
          <displayname lang="en">Info</displayname>
          <shortdescription lang="en">Informational messages.</shortdescription>
        </selection>
        <selection name="Debug">
          <displayname lang="en">Debug</displayname>
          <shortdescription lang="en">Debugging messages.</shortdescription>
        </selection>
      </value>
      <value name="httpPort" type="NumericValue" default="8000">
        <text lang="en">The port number to listen on for HTTP requests.</text>
      </value>
    </configuration>
  </class>
  <!-- Configuration description for the MQTT plugin -->
  <class name="Mqtt.MqttPlugin">
    <description>
      <icon image="mqtt.png"/>
      <displayname lang="en">Mqtt Integration</displayname>
      <shortdescription lang="en">Duplicate SensHub messages on a MQTT server.</shortdescription>
      <longdescription lang="en">
        This plugin allows messages on the SensHub message bus to be replicated on a MQTT server
        and vice-versa. Use of MQTT provides maximum flexibility.
      </longdescription>
    </description>
    <configuration>
      <value name="server" type="StringValue" default="localhost">
        <text lang="en">The IP address or host name of the MQTT server to bind to.</text>
      </value>
      <value name="topic" type="StringValue" default="senshub">
        <text lang="en">The MQTT topic tree to use for messages.</text>
      </value>
      <value name="identity" type="StringValue" default="">
        <text lang="en">The SensHub server identity string.</text>
      </value>
    </configuration>
  </class>
  <!-- Configuration description for a single match -->
  <class name="Rules.Match">
    <configuration>
      <value name="field" type="StringValue" default="">
        <text lang="en">The name of the field to test against.</text>
      </value>
      <value name="negate" type="BooleanValue" default="false">
        <text lang="en">Negate the comparison.</text>
      </value>
      <value name="comparison" type="OptionList" default="contains">
        <text lang="en">How to compare the value.</text>
        <selection name="contains">
          <displayname lang="en">Contains</displayname>
          <shortdescription lang="en">The field contains the text.</shortdescription>
        </selection>
        <selection name="startsWith">
          <displayname lang="en">Starts With</displayname>
          <shortdescription lang="en">The field starts with the text.</shortdescription>
        </selection>
        <selection name="endsWith">
          <displayname lang="en">Ends With</displayname>
          <shortdescription lang="en">The field ends with the text.</shortdescription>
        </selection>
        <selection name="equals">
          <displayname lang="en">Equals</displayname>
          <shortdescription lang="en">The field matches the text exactly.</shortdescription>
        </selection>
        <selection name="greaterThan">
          <displayname lang="en">Greater Than</displayname>
          <shortdescription lang="en">The field is greater than the value.</shortdescription>
        </selection>
        <selection name="lessThan">
          <displayname lang="en">Less Than</displayname>
          <shortdescription lang="en">The field is less than the value.</shortdescription>
        </selection>
      </value>
      <value name="value" type="StringValue" default="">
        <text lang="en">The value to compare against.</text>
      </value>
    </configuration>
  </class>
  <!-- Configuration description for a filter - a collection of Matches -->
  <class name="Rules.Filter">
    <configuration>
      <value name="matches" type="ConfigList" subtype="Rules.Match">
        <text lang="en">Required conditions to pass the filter.</text>
      </value>
    </configuration>
  </class>
  <!-- Configuration description for a script based action -->
  <class name="Rules.ScriptAction">
    <configuration>
      <value name="source" type="ScriptValue" default="">
        <text lang="en">The source for the script to run.</text>
      </value>
    </configuration>
  </class>
</metadata>