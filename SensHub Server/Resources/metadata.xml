<?xml version="1.0" encoding="utf-8" ?>
<metadata defaultLang="en">
  <class name="Program">
    <configuration>
      <value name="password" type="StringValue" default="">
        <text lang="en">Set the system password.</text>
      </value>
      <value name="logLevel" type="OptionList" default="Warn">
        <text lang="en">The minimimum logging level. Only messages of this severity or above will be logged.</text>
        <selection name="Error">
          <displayname lang="en">Error</displayname>
          <shortdescription lang="en">Error messages.</shortdescription>
        </selection>
        <selection name="Warn">
          <displayname lang="en">Warn</displayname>
          <shortdescription lang="en">Warning messages.</shortdescription>
        </selection>
        <selection name="Info">
          <displayname lang="en">Info</displayname>
          <shortdescription lang="en">Informational messages.</shortdescription>
        </selection>
        <selection name="Debug">
          <displayname lang="en">Debug</displayname>
          <shortdescription lang="en">Debugging messages.</shortdescription>
        </selection>
      </value>
      <value name="httpPort" type="NumericValue" default="8000">
        <text lang="en">The port number to listen on for HTTP requests.</text>
      </value>
    </configuration>
  </class>
  <class name="Mqtt.MqttPlugin">
    <description>
      <icon image="mqtt.png"/>
      <displayname lang="en">Mqtt Integration</displayname>
      <shortdescription lang="en">Duplicate SensHub messages on a MQTT server.</shortdescription>
      <longdescription lang="en">
        This plugin allows messages on the SensHub message bus to be replicated on a MQTT server
        and vice-versa. Use of MQTT provides maximum flexibility.
      </longdescription>
    </description>
    <configuration>
      <value name="server" type="StringValue" default="localhost">
        <text lang="en">The IP address or host name of the MQTT server to bind to.</text>
      </value>
      <value name="topic" type="StringValue" default="senshub">
        <text lang="en">The MQTT topic tree to use for messages.</text>
      </value>
      <value name="identity" type="StringValue" default="">
        <text lang="en">The SensHub server identity string.</text>
      </value>
    </configuration>
    </class>
</metadata>